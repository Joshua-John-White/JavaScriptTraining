<body>

<button onclick="go()">Start</button>

<p id="output"></p>



<script> 

 function go() {

var n = 0;
var x;

var text = ""

for (x=0; x < 10;x++){

n = n + 1;


	if ((n % 2 === 0) == true) {
	
   text += n + "<br>"
		document.getElementById('output').innerHTML = text;
	}
}
}
</script>


